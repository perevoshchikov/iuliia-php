{
    "name": "anper/iuliia",
    "type": "library",
    "description": "Transliterate Cyrillic â†’ Latin in every possible way.",
    "keywords": [
        "iuliia",
        "cyrillic",
        "latin",
        "transliterate",
        "translit",
        "translate"
    ],
    "homepage": "https://github.com/perevoshchikov/iuliia-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Perevoshchikov",
            "email": "anper3.5@gmail.com"
        }
    ],
    "require": {
        "php" : "~7.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "ext-json": "*",
        "phpstan/phpstan": "^0.11.0",
        "phpunit/php-code-coverage": "^6.0",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Anper\\Iuliia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anper\\Iuliia\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "build": "php ./bin/build.php",
        "analyse": "phpstan analyse src --level=7",
        "check-style": "phpcs -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
